<div class="container sign-up-page">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <a href="/"><img class="logo" src="https://next.oneforsafety.com/apps/files_sharing/publicpreview/cxBjoyJ8EMQms27?x=3360&y=1040&a=true&file=ofs.png" width="274px"></a>

      <div class="sign-up-free">
        <b>Sign up for free.</b> No credit card required.
      </div>

      <%= render 'shared/notice_and_errors' %>

      <form action="<%= users_url %>" method="post" class="form-group">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <input class="form-control" type="text" id="user-buinsess_name" name="user[business_name]" value="<% @user.business_name %>" placeholder="Business Name">

        <input class="form-control" type="text" id="user-website" name="user[website]" value="<% @user.website %>" placeholder="Website">

        <input class="form-control" type="text" id="user-email" name="user[email]" value="<%= @user.email %>" placeholder="you@email.com">

        <input class="form-control" type="password" id="user-password" name="user[password]" placeholder="Password">

        <input class="btn btn-primary submit-user" type="submit" value="Get Started">
      </form>

      <%= link_to 'Guest Login', new_session_url(demo: "true"), { method: "get", class: "guest-login-button"} %>
    </div>
  </div>
</div>
