  <div class="desktop-options group">
    <div class="selected ten-gb-free">10GB Free</div>
    <div class="custom-domain">Custom Domain</div>
    <div class="byo-drive">B.Y.O.Drive</div>
  </div>

  <div class="desktop">
    <img src="https://next.oneforsafety.com/apps/files_sharing/publicpreview/L7H54zcr7HjsGXW?x=2282&y=858&a=true&file=desktop-image.png" class="computer">
    <img src="https://next.oneforsafety.com/apps/files_sharing/publicpreview/r2262E3p4bR2raS?x=1720&y=907&a=true&file=library-1500.jpg" class="tengb-free example">
    <img src="https://next.oneforsafety.com/apps/files_sharing/publicpreview/eGfEarfk7QtYr7C?x=2282&y=858&a=true&file=colorful-blur-1500.jpg" class="custom-domain example">
    <img src="https://next.oneforsafety.com/apps/files_sharing/publicpreview/jcKrTJf9C2MsFqm?x=2282&y=858&a=true&file=usb-hdd.jpg" class="byodrive ssd">
